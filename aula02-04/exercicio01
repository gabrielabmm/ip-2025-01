package main

import "fmt"

func main () {
var numAlunos, nota, media, i float64
var soma float64 = 0

	fmt.Println ("Quantos alunos fazem a disciplina?")
fmt.Scan (&numAlunos)

for i=1; i <= numAlunos; i++ {
	fmt.Println ("Qual a nota do aluno ", i, "?")
fmt.Scan (&nota)
soma += nota
}

media = (soma / numAlunos)

fmt.Println ("A média é: ", media)

}

