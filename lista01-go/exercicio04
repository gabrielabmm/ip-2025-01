package main

import "fmt"

func main() {

	var salarioMin, kwGastos int

	fmt.Println("Qual é o valor do salário mínimo? ")
	fmt.Scan(&salarioMin)

	fmt.Println("Quantos kW foram gastos pela residência? ")
	fmt.Scan(&kwGastos)

	kWunico := ((salarioMin * 7) / 10)
	valorkW := (kWunico / 100)

	fmt.Println("O valor, em real, de cada kW é ", valorkW)

	valorRes := (valorkW * kwGastos)

	fmt.Println("O valor, em reais, a ser pago pela residência é:", valorRes)

	novoValor := ((valorRes * 9) / 10)

	fmt.Println("O novo valor a ser pago, com desconto de 10%, é:", novoValor)
}
